generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  description String?  @default("")
  avatar      String?
  bio         String?
  experience  String?
  createdAt   DateTime @default(now())

  plants Plant[] @relation("UserPlants")
  orders Order[] @relation("UserOrders")
}

model Plant {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  care        String
  photo       String
  price       Float
  phone       String
  sellerId    Int?
  seller      User?    @relation("UserPlants", fields: [sellerId], references: [id])
  category    String   @default("") // ← порожній рядок для всіх існуючих
  createdAt   DateTime @default(now())
}

model Order {
  id         Int      @id @default(autoincrement())
  buyerName  String
  buyerPhone String
  city       String
  branch     String
  items      Json
  total      Float
  sellerId   Int
  seller     User     @relation("UserOrders", fields: [sellerId], references: [id])
  createdAt  DateTime @default(now())
}
